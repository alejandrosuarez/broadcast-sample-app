<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
    <script src="js/guest.js" type="text/javascript"></script>
  </head>

  <body>
    <div id="credentials" style="display: none" data="<%= credentials %>"></div>
    <div id="main" class="main-container">
      <div id="videoContainer" class="video-container">
        <div id="hostDivider" class="hidden"></div>
        <button
          type="button"
          class="btn btn-primary toggler"
          data-target="#playVideoModal"
          data-toggle="modal"
          id="back-viewer"
        >
          Switch to viewer
        </button>
        <div id="playVideoModal" class="modal" tabindex="-1" role="dialog">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title">Switch to viewer mode</h5>
                <button
                  type="button"
                  class="close"
                  data-dismiss="modal"
                  aria-label="Close"
                >
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <p>Click to switch to viewer mode</p>
              </div>
              <div class="modal-footer">
                <button id="go-live-btn" type="button" class="btn btn-primary">
                  Go
                </button>
                <button
                  id="close-btn"
                  type="button"
                  class="btn btn-secondary"
                  data-dismiss="modal"
                >
                  Close
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
