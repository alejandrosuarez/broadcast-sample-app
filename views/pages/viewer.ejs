<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
    <script src="js/viewer.js" type="text/javascript"></script>
  </head>

  <body>
    <div id="credentials" style="display: none" data="<%= credentials %>"></div>
    <div id="main" class="main-container">
      <!-- <button id="go-hls-btn" type="button" class="btn btn-primary">Go</button> -->
      <div id="banner" class="banner">
        <span id="bannerText" class="text">Waiting for Broadcast to Begin</span>
      </div>
      <div id="videoContainer" class="video-container">
        <div id="hostDivider" class="hidden"></div>
        <button
          type="button"
          class="btn btn-primary toggler hidden"
          data-target="#playVideoModal"
          data-toggle="modal"
          id="back-hls"
        >
          Switch to HLS mode
        </button>

        <button
          type="button"
          class="btn btn-primary toggler hidden"
          data-target="#goLive"
          data-toggle="modal"
          id="participate"
        >
          Request to Go Live
        </button>
      </div>
      <div id="playVideoModal" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Switch to broadcast mode</h5>
              <button
                type="button"
                class="close"
                data-dismiss="modal"
                aria-label="Close"
              >
                <span aria-hidden="true">&times;</span>
              </button>
            </div>

            <div class="modal-body">
              <p>Click to switch to Broadcast viewer</p>
            </div>
            <div class="modal-footer">
              <button id="go-hls-btn" type="button" class="btn btn-primary">
                Go
              </button>
              <button
                id="close-btn"
                type="button"
                class="btn btn-secondary"
                data-dismiss="modal"
              >
                Close
              </button>
            </div>
          </div>
        </div>
      </div>
      <div id="goLive" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Jump on Stage</h5>
              <button
                type="button"
                class="close"
                data-dismiss="modal"
                aria-label="Close"
              >
                <span aria-hidden="true">&times;</span>
              </button>
            </div>

            <div class="modal-body">
              <p>Click to go Live</p>
            </div>
            <div class="modal-footer">
              <button
                id="participate-button"
                type="button"
                class="btn btn-primary"
              >
                Go
              </button>
              <button
                id="close-btn"
                type="button"
                class="btn btn-secondary"
                data-dismiss="modal"
              >
                Close
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
